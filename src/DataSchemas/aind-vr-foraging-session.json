{
  "$id": "h...",
  "$schema": "https://json-schema.org/draft-07/schema",
  "definitions": {
    "corridorSpecifications": {
      "$ref": "aind-vr-foraging-common.json#/definitions/visualCorridor"
    },
    "virtualSite": {
      "$ref": "aind-vr-foraging-common.json#/definitions/virtualSite"
    },
    "siteLabel": {
      "type":"string",
      "enum": ["Unspecified", "Gap", "InterPatch", "Reward"]
    }
  },
  "properties": {
    "environmentStatistics": {
      "properties": {
        "patches": {
          "default": [],
          "items": {
            "$ref": "aind-vr-foraging-common.json#/definitions/patchStatistics"
          },
          "type": "array"
        },
        "transitionMatrix": {
          "$ref": "aind-vr-foraging-common.json#/definitions/matrix2d"
        }
      },
      "type": "object"
    },
    "metadata": {
      "properties": {
        "commitHash": {
          "default": null,
          "type": ["null", "string"]
        },
        "experiment": {
          "type": "string"
        },
        "notes": {
          "default": "",
          "type": "string"
        },
        "rngSeed": {
          "type": ["null", "number"]
        },
        "rootPath": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "rootPath",
        "subject",
        "experiment",
        "version",
        "commitHash"
      ],
      "type": "object"
    },
    "taskLogicHelper": {
      "properties": {
        "virtualSiteGeneration": {
          "properties": {
            "gapSite": {
              "properties": {
                "lengthDistribution": {
                  "$ref": "aind-vr-foraging-common.json#/definitions/truncatedExponential"
                },
                "label": {
                  "$ref": "#/definitions/siteLabel",
                  "default": "Gap"
                }
              },
              "type": "object"
            },
            "interPatchSite": {
              "properties": {
                "lengthDistribution": {
                  "$ref": "aind-vr-foraging-common.json#/definitions/truncatedExponential"
                },
                "label": {
                  "$ref": "#/definitions/siteLabel",
                  "default": "InterPatch"
                }
              },
              "type": "object"
            },
            "rewardSite": {
              "properties": {
                "lengthDistribution": {
                  "$ref": "aind-vr-foraging-common.json#/definitions/truncatedExponential"
                },
                "label": {
                  "$ref": "#/definitions/siteLabel",
                  "default": "Reward"
                }
              },
              "type": "object"
            }
          },
          "required": ["interPatchSite", "rewardSite", "gapSite"],
          "type": "object"
        }
      },
      "type": "object"
    },
    "hardware": {
      "properties": {
        "screen": {
          "$ref": "aind-vr-foraging-common.json#/definitions/renderingSettings"
        },
        "treadmill": {
          "$ref": "aind-vr-foraging-common.json#/definitions/treadmillSettings"
        },
        "valves": {
          "type":"object",
          "properties": {
            "water": {
              "$ref": "aind-vr-foraging-common.json#/definitions/valve"
            },
            "odor1": {
              "$ref": "aind-vr-foraging-common.json#/definitions/valve"
            },
            "odor2": {
              "$ref": "aind-vr-foraging-common.json#/definitions/valve"
            }
          }
        },
        "mainCamera": {
          "$ref": "aind-vr-foraging-hardware.json#/definitions/spinnakerCamera"
        },
        "harpBehaviorBoard":{
          "$ref": "aind-vr-foraging-hardware.json#/definitions/harpBoard"
        }
      },
      "type": "object"
    }
  },
  "required": ["metadata", "taskLogicHelper"],
  "title": "AindVrForagingSession",
  "type": "object"
}
