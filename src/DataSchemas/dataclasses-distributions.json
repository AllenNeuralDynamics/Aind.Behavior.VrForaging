{
  "$id": "dataclasses-distributions",
  "$schema": "https://json-schema.org/draft-09/schema",
  "definitions": {
    "truncationParameters": {
      "type": "object",
      "properties": {
        "isTruncated": {
          "type": "boolean",
          "default": false
        },
        "min": { "type": "number" },
        "max": { "type": "number" }
      }
    },
    "scalingParameters": {
      "type": "object",
      "properties": {
        "scalingParameters.scale": {
          "type": "number",
          "default": 1
        },
        "scalingParameters.shift": {
          "type": "number"
        }
      },
      "default": {
        "scalingParameters.scale": 1,
        "scalingParameters.shift": 0
      }
    },
    "normalDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "normal",
          "type": "string",
          "default": "normal"
        },
        "normalParameters": {
          "type": "object",
          "properties": {
            "mean": {
              "type": "number",
              "default": 0
            },
            "std": {
              "type": "number",
              "default": 1
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "logNormalDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "logNormal",
          "type": "string",
          "default": "logNormal"
        },
        "logNormalParameters": {
          "type": "object",
          "properties": {
            "mean": {
              "type": "number",
              "default": 0
            },
            "std": {
              "type": "number",
              "default": 1
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "uniformDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "uniform",
          "type": "string",
          "default": "uniform"
        },
        "uniformParameters": {
          "type": "object",
          "properties": {
            "min": {
              "type": "number",
              "default": 0
            },
            "max": {
              "type": "number",
              "default": 1
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "exponentialDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "exponential",
          "type": "string",
          "default": "exponential"
        },
        "exponentialParameters": {
          "type": "object",
          "properties": {
            "rate": {
              "type": "number",
              "default": 1,
              "minimum": 0
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "gammaDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "gamma",
          "type": "string",
          "default": "gamma"
        },
        "gammaParameters": {
          "type": "object",
          "properties": {
            "shape": {
              "type": "number",
              "default": 1,
              "minimum": 0
            },
            "rate": {
              "type": "number",
              "default": 1,
              "minimum": 0
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "binomialDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "binomial",
          "type": "string",
          "default": "binomial"
        },
        "binomialParameters": {
          "type": "object",
          "properties": {
            "successProbability": {
              "type": "number",
              "default": 0.5,
              "minimum": 0,
              "maximum": 1
            },
            "count": {
              "type": "number",
              "default": 1,
              "minimum": 0
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "betaDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "beta",
          "type": "string",
          "default": "beta"
        },
        "betaParameters": {
          "type": "object",
          "properties": {
            "alpha": {
              "type": "number",
              "default": 5,
              "minimum": 0
            },
            "beta": {
              "type": "number",
              "default": 5,
              "minimum": 0
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    },
    "poissonDistribution": {
      "type": "object",
      "properties": {
        "family": {
          "const": "poisson",
          "type": "string",
          "default": "poisson"
        },
        "poissonParameters": {
          "type": "object",
          "properties": {
            "rate": {
              "type": "number",
              "default": 1,
              "minimum": 0
            },
            "truncate": { "$ref": "#/definitions/truncationParameters" },
            "scale": { "$ref": "#/definitions/scalingParameters" }
          }
        }
      },
      "required": [ "family", "parameters" ]
    }
  },
  "properties": {
    "Version": {
      "type": "string",
      "default": "0.1.0"
    },
    "distributions": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/normalDistribution" },
          { "$ref": "#/definitions/logNormalDistribution" },
          { "$ref": "#/definitions/uniformDistribution" },
          { "$ref": "#/definitions/exponentialDistribution" },
          { "$ref": "#/definitions/gammaDistribution" },
          { "$ref": "#/definitions/binomialDistribution" },
          { "$ref": "#/definitions/betaDistribution" },
          { "$ref": "#/definitions/poissonDistribution" }
        ]
      }
    }
  },
  "title": "DataclassesDistributions",
  "type": "object"
}
