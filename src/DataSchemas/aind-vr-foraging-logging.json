        "timestampSource": {
          "type": "string",
          "enum": ["none", "harp", "render"],
          "default": "none"
        },
        "frameIndex": {
          "type": ["null", "integer"],
          "minimum": 0
        },
        "frameTimestamp":{
          "type": ["null", "number"],
          "default": null
