        "dataType": {
          "type": "string",
          "enum": ["string", "number", "boolean", "object", "array", "null"],
          "default": null
        }
      }
    },
    "harpLogger": {
      "type": "object",
      "properties": {
        "logName": {
          "type": "string",
          "default": "harpDevice"
        },
        "extension": {
          "type": "string",
          "default": "bin"
        }
      }
    },
    "spinnakerLogger": {
      "type": "object",
      "properties": {
        "logName": {
          "type": "string",
          "default": "camera"
        },
        "encodingFrameRate": {
          "type": "number",
          "default": 60
        },
        "videoExtension": {
          "type": "string",
          "default": "avi"
        },
        "metadataExtension": {
          "type": "string",
          "default": "csv"
        },
        "codec": {
          "type": "string",
          "default": "FMP4"
        }
      }
    },
    "genericCsvLogger": {
      "type": "object",
      "required": ["logName"],
      "properties": {
        "logName": {
          "type": "string"
        },
        "deviceName": {
          "type": ["string", "null"],
          "default": "generic"
        },
        "extension": {
          "type": "string",
          "default": "csv"
        },
        "omitHeader": {
          "type": "boolean",
